{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./src", // ✅ Allows imports without `/src`
    "paths": {
      "*": ["*"] // ✅ Ensures TypeScript resolves all modules
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
